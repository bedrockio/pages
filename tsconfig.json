{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "types"
  },
}